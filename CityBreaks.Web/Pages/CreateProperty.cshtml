@page
@model CityBreaks.Web.Pages.CreatePropertyModel

<h1>Cadastrar Propriedade</h1>

<form method="post">
    <div>
        <label>Nome</label><br/>
        <input asp-for="Property.Name"/>
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div>
        <label>Pre√ßo por Noite</label><br/>
        <input asp-for="Property.PricePerNight" type="number" step="0.01"/>
        <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
    </div>

    <div>
        <label>Cidade</label><br/>
        <select asp-for="Property.CityId" asp-items="Model.Cities">
            <option value="">Selecione uma cidade</option>
        </select>
        <span asp-validation-for="Property.CityId" class="text-danger"></span>
    </div>

    <br/>
    <button type="submit">Salvar</button>
</form>

<a asp-page="/Index">Voltar</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}