@page "{id:int}"
@using CityBreaks.Web.Models
@model CityBreaks.Web.Pages.EditPropertyModel

<h1>Editar Propriedade</h1>

<form method="post">
    <div>
        <label>Nome</label><br/>
        <input asp-for="Property.Name"/>
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div>
        <label>Pre√ßo por Noite</label><br/>
        <input asp-for="Property.PricePerNight" type="number" step="0.01"/>
        <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
    </div>
    
    <br/>
    <button type="submit">Salvar</button>
</form>

<a asp-page="CityDetails" asp-route-name="@Model.FromCityName">Voltar</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}